---
import Layout, { navigationList } from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import InlineNavigation from "../components/inlineNavigation.vue";
import InlineNavMaster from "../components/InlineNavMaster.astro";
import { WeatherMaker } from "../components/weatherMaker";
---

<Layout title="Astro New Beginning">
  <main>
    <h1>A<span class="astroTitle">stro</span> New Beginning</h1>

    <!-- 		<div style="display:flex; flex-direction: column; align-items: center; justify-items: center; padding: 2rem; padding-top: 0.5rem;">
			<InlineNavigation pages={ navigationList } client:visible />	
		</div> -->

    <InlineNavMaster>
      <InlineNavigation pages={navigationList} client:visible />
    </InlineNavMaster>

    <!-- <p style="text-align: center;">No instructions yet...</p> -->

    <p style="text-align: center;">
      Let's make some <span class="make-content">content</span>.
    </p>

    <div style="display:flex; justify-content:center;">
      <button class="rainy-button rainy1">Make it rain please</button>
      <button class="rainy-button rainy2">Make it rain?</button>
      <button class="rainy-button rainy3">Or not</button>
      <button class="rainy-button rainy4">Come on</button>
      <button class="rainy-button rainy5">You can do it</button>
      <button class="rainy-button rainy6">Bye</button>
    </div>

    <div style="text-align:center; margin-top: 5rem; margin-bottom: 1rem;">
      Some shiny gems are blocking your path
    </div>

    <div style="display:flex; justify-content:center;">
      <button class="button-all bubbly bubble1"></button>
      <button class="button-all bubbly bubble2"></button>
      <button class="button-all bubbly bubble3"></button>
    </div>

    <div style="text-align:center; margin-top: 5rem; margin-bottom: 1rem;">Reveal the secret word</div>

    <div
      class="gems"
      style="position:relative; display:flex; flex-direction: column; align-items: center; justify-items: center; justify-content:center; margin-bottom: 4rem;"
    >
      <!-- <div class="treasure">Potato</div> -->
      <div class="gem-row">
        <button class="button-all gem"></button>
        <button class="button-all gem"></button>
        <button class="button-all gem"></button>
      </div>
      <div class="gem-row">
        <button class="button-all gem"></button>
        <button class="button-all gemAnswer"></button>
        <div class="treasure">Potato</div>
        <button class="button-all gem"></button>
      </div>
      <div class="gem-row">
        <button class="button-all gem"></button>
        <button class="button-all gem"></button>
        <button class="button-all gem"></button>
      </div>
    </div>

    <!--     <div style="display:flex; justify-content:center;">
		<button class="button-all shy">Shy</button>
	</div> -->

    <!-- <WeatherMaker /> -->

    <script>
      const main = document.querySelector("main");
      console.log(main);

      const buttons = document.querySelectorAll("button.rainy-button");

      buttons.forEach((button) => {
        button.addEventListener("click", () => {
          console.log("It's raining");
        });
      });
    </script>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }

  /*  */

  .astroTitle {
    color: aqua;
    transition: 2s;
  }
  .astroTitle:hover {
    color: mediumspringgreen;
  }

  .make-content {
    color: greenyellow;
    cursor: pointer;
    transition-duration: 1000ms;
  }
  .make-content:hover {
    color: chartreuse;
    color: aqua;
    color: darksalmon;
    color: hotpink;
    color: pink;
    transition-duration: 1000ms;
  }

  .button-all {
    background-color: rgb(0, 0, 0);
    color: white;
    padding: 1rem;
    margin: 1rem;
    font-size: large;
    border-color: white;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: 1s;
  }

  .rainy-button {
    /* background-color: rgb(0, 0, 0); */
    background: linear-gradient(
      to bottom right,
      rgb(40, 223, 255),
      rgb(255, 64, 166)
    );
    color: white;
    padding: 1rem;
    margin: 1rem;
    font-size: large;
    border-width: 0rem;
    /* border: linear-gradient(to left, rgb(18, 126, 49), rgb(211, 42, 132)); */
    border-radius: 0.5rem;
    cursor: pointer;
    transition: 2s;
  }
  .rainy1:hover {
    filter: contrast(500%) brightness(50%);
    /* color: aqua; */
    /* border-color: aqua; */
    /* background-color:dodgerblue; */
    /* transition: 1s */
  }
  .rainy2 {
    background: linear-gradient(
      to bottom right,
      rgb(0, 255, 72),
      rgb(210, 32, 255)
    );
  }
  .rainy2:hover {
    filter: hue-rotate(180deg);
  }
  .rainy3 {
    background: linear-gradient(
      to bottom right,
      rgb(226, 255, 40),
      rgb(255, 91, 179)
    );
  }
  .rainy3:hover {
    filter: grayscale(80%);
  }
  .rainy4 {
    background: linear-gradient(
      to bottom right,
      rgb(255, 161, 247),
      rgb(154, 0, 193)
    );
  }
  .rainy4:hover {
    filter: hue-rotate(90deg);
  }
  .rainy5 {
    background: linear-gradient(
      to bottom right,
      rgb(255, 67, 67),
      rgb(255, 137, 200)
    );
  }
  .rainy5:hover {
    filter: invert(75%);
  }
  .rainy6 {
    background: linear-gradient(
      to bottom right,
      rgb(10, 141, 255),
      rgb(255, 55, 55)
    );
  }
  .rainy6:hover {
    opacity: 0;
  }

  .bubbly {
    border: none;
    padding: 2rem;
    background: linear-gradient(
      to bottom left,
      rgb(255, 255, 255),
      rgb(213, 255, 1)
    );
  }
  .bubbly:hover {
    /* 	margin-left: 12rem;
	transition: 1s */
  }
  .bubbly:active {
    margin-right: 12rem;
    opacity: 0.75;
    /* transition: 1s */
  }

  .bubbly:nth-child(1) {
    background: linear-gradient(
      to bottom left,
      rgb(255, 255, 255),
      rgb(1, 255, 56)
    );
  }
  .bubbly:nth-child(2) {
    background: linear-gradient(
      to bottom left,
      rgb(255, 255, 255),
      rgb(255, 149, 1)
    );
  }
  .bubbly:nth-child(3) {
    background: linear-gradient(
      to bottom left,
      rgb(255, 255, 255),
      rgb(213, 255, 1)
    );
  }

  .treasure {
    text-align:center;
    left: 46.3%; right: 50%; bottom: 50%; top: 45%;
    position: absolute;
    opacity: 0;
    pointer-events:none;
    color:gray;
    filter: blur(4px);
    transition: 0.5s;
  }

  .gem {
    border: none;
    padding: 2rem;
    background: linear-gradient(
      to bottom left,
      rgb(255, 255, 255),
      rgb(1, 208, 255)
    );
  }
  .gem:active {
    margin-right: 12rem;
  }

  .gems {

  }
  .gems.gem-row:nth-of-type(2).gem:nth-child(2) {
    background: linear-gradient(
      to bottom left,
      rgb(255, 255, 255),
      rgb(144, 255, 174)
    );
  }

  .gemAnswer {
    border: none;
    padding: 2rem;
    background: linear-gradient(
      to bottom left,
      rgb(255, 255, 255),
      rgb(1, 208, 255)
    );    
  }
  .gemAnswer:active {
    opacity: 0;
  }
  .gemAnswer:active ~ .treasure {
    opacity: 1;
    transition: 2;
    filter: blur(0px);
